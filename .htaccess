# ============================
# ZoneVault.site Security Rules
# ============================

# --- Enable Rewrite Engine ---
RewriteEngine On

# --- Pretty URLs: /page â†’ /page.html ---
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [NC,L]

# --- Prevent directory listing (people seeing raw folder contents) ---
Options -Indexes

# --- Hotlink Protection (images & videos) ---
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?zonevault\.site/ [NC]
RewriteRule \.(mp4|webm|jpg|jpeg|png|gif)$ - [F,NC,L]

# --- Security Headers ---
Header always set X-Frame-Options "SAMEORIGIN"
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
Header always set X-Content-Type-Options "nosniff"
Header always set X-XSS-Protection "1; mode=block"
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; media-src 'self'; frame-ancestors 'self';"
# ============================
